---
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import Layout from "../../layouts/Base.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="w-full">
    {
      posts.length === 0 ? (
        <img
          src="https://web.archive.org/web/20091026193304if_/http://geocities.com/alessimdon/Immagini/lavori03.gif"
          alt="Writing stuff..."
        />
      ) : (
        <>
          <h2 class="mb-6 text-4xl font-bold">Blog posts</h2>
          <img
            src="https://web.archive.org/web/20091025010801if_/http://geocities.com/adndgamer/mcspin5.gif"
            alt="idk why I keep adding these gifs"
          />
          <ul>
            {posts.map((post) => (
              <a href={`/blog/${post.slug}/`}>
                <li class="flex">
                  <pre class="bold">=></pre>
                  {post.data.title}
                  (<FormattedDate date={post.data.pubDate} />)
                </li>
              </a>
            ))}
          </ul>
        </>
      )
    }
  </section>
</Layout>
