---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Layout from "../layouts/Base.astro";

const response = await fetch("https://dev.to/api/users/473140");
const data = await response.json();
---

<Layout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  heroImage={"/placeholder-about.png"}
>
  <h2 class="mb-6 text-4xl font-bold">About me</h2>
  <article
    class="prose prose-lg flex max-w-none flex-col items-center text-center"
  >
    <div class="w-full md:max-w-4xl">
      <p>
        {data.summary}
      </p>
    </div>
    <img
      src="https://web.archive.org/web/20091026193304if_/http://geocities.com/alessimdon/Immagini/lavori03.gif"
      class="absolute bottom-20 right-20"
      alt="under construction!"
    />
  </article>
</Layout>
