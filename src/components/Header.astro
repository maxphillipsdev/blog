---
import HeaderLink from "./HeaderLink.astro";
import { LinkedinLogo, GithubLogo, TwitterLogo } from "@phosphor-icons/react";
import ThemeToggle from "./ThemeToggle";
import poweredByVercel from "powered-by-vercel/powered-by-vercel.svg";

export const prerender = true;
---

<header
  class="flex flex-col gap-4 border-b border-slate-3 print:hidden md:h-full md:border-b-0 md:border-r"
>
  <h2 class="flex w-full justify-center font-mono text-slate-12 md:mr-6">
    <HeaderLink href="/">
      <span class="text-crimson-9">~/</span>maxphillipsdev
    </HeaderLink>
  </h2>
  <nav
    class="flex h-full justify-center gap-4 font-black md:flex-col md:justify-start"
  >
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
  </nav>
  <div class="mr-8 flex w-full justify-center gap-4">
    <HeaderLink href="https://github.com/maxphillipsdev" target="_blank">
      <GithubLogo size={18} />
    </HeaderLink>
    <HeaderLink href="https://linkedin.com/in/maxphillipsdev/" target="_blank">
      <LinkedinLogo size={18} />
    </HeaderLink>
    <HeaderLink href="https://twitter.com/maxphillipsdev" target="_blank">
      <TwitterLogo size={18} />
    </HeaderLink>
    <HeaderLink>
      <ThemeToggle client:load />
    </HeaderLink>
  </div>
  <div class="mr-8 hidden w-full justify-center md:flex">
    <img src={poweredByVercel} alt="Powered by vercel badge" />
  </div>
</header>
