---
import HeaderLink from "./HeaderLink.astro";
import { GithubLogo, TwitterLogo } from "@phosphor-icons/react";
---

<header class="flex h-full flex-col border-r border-gray-5 border-r-[1] p-6">
  <h2 class="font-mono">
    <span class="text-crimson-9">~/</span>maxphillipsdev
  </h2>
  <nav class="flex flex-col">
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="https://twitter.com/maxphillipsdev" target="_blank">
      <TwitterLogo size={18} />
    </HeaderLink>
    <HeaderLink href="https://github.com/maxphillipsdev" target="_blank">
      <GithubLogo size={18} />
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
