---
import HeaderLink from "./HeaderLink.astro";
import { LinkedinLogo, GithubLogo, TwitterLogo } from "@phosphor-icons/react";
---

<header
  class="flex flex-col gap-4 border-b border-slate-3 print:hidden"
>
  <h2 class="flex w-full justify-center font-mono text-slate-12">
    <HeaderLink href="/">
      <span class="text-crimson-9">~/</span>max.phillips
    </HeaderLink>
  </h2>
  <div class="mr-8 mb-4 flex w-full justify-center gap-4">
    <HeaderLink href="https://github.com/maxphillipsdev" target="_blank">
      <GithubLogo size={24} />
    </HeaderLink>
    <HeaderLink href="https://linkedin.com/in/maxphillipsdev/" target="_blank">
      <LinkedinLogo size={24} />
    </HeaderLink>
    <HeaderLink href="https://twitter.com/maxphillipsdev" target="_blank">
      <TwitterLogo size={24} />
    </HeaderLink>
  </div>
</header>
